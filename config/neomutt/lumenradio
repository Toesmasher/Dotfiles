mailboxes `find ~/Mail/lumenradio -type d -not -name "lumenradio" -not -name cur -not -name new -not -name tmp -printf "=\"%P\" "`

# New mail notification
set new_mail_command = "notify-send --icon=/usr/share/neomutt/logo/neomutt-256.png \
  -t 60000 'Lumenradio.com' 'New mail (%n)'"

source $HOME/.config/neomutt/common
